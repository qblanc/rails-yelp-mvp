<div class="container col-6">
<h2 class='d-inline-block'>Add a restaurant</h2>
  <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.select :category, ['chinese', 'italian', 'japanese', 'french', 'belgian'] %>
    <%= f.submit class: "btn btn-primary" %>
<% end %>
</div>
